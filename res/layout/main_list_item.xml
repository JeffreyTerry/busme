<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/card_background" >
               
            
	<LinearLayout
	    android:id="@+id/linearlayoutCond"
	    android:layout_width="225dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="@drawable/main_list_item"
	    >
	    
	    <TextView
	        android:layout_weight="1"
	        android:id="@+id/tvRouteStart"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Sage Hall"
	        android:textSize="18dp"
	        android:textColor="#646464"
	        android:padding="5dp"/>
	    <TextView
	        android:layout_weight="1"
	        android:id="@+id/tvRouteDestination"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Seneca Commons"
	        android:textSize="18dp"
	        android:gravity="right|bottom"
	        android:textColor="#646464"
	        android:padding="5dp"
/>
	    </LinearLayout>
	    
	 
	

	
		<ImageView
		    android:layout_width="5dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/divider_list_item"
		    android:scaleType="fitXY"
		    />
	

	
	

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:weightSum="6"
	    android:background="@drawable/list_item_end">
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:layout_height="0dp"
	        />
	    
	    <TextView
	        android:id="@+id/tvRouteNumber"
	        android:layout_width="match_parent"
			android:layout_weight ="2"
			android:layout_height="0dp"
			android:text="BUS#10"
	        android:textSize="18dp"
	        android:paddingBottom="5dp"
	        android:textStyle="bold"
	        android:textColor="@color/white"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/tvTime"
	        android:layout_width="match_parent"
	        android:layout_weight="2"
	        android:layout_height="0dp"
			android:text="15mins"
	        android:textSize="21dp"
	        android:textStyle="bold"
	        android:textColor="@color/marshgreen"
	        android:gravity="center"/>
	    
	    
	    
	    </LinearLayout>
	    

</LinearLayout>
	    