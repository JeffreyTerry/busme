<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >
   
        
	<LinearLayout
	    android:layout_width="225dp"
	    android:layout_height="70dp"
	    android:background="@drawable/main_list_item"
	    android:orientation="vertical">
	    
	    <TextView
	        android:id="@+id/tvRouteStart"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Sage Hall"
	        android:paddingTop="5dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="10dp"
	        android:textSize="18dp"
	        android:textStyle="bold"/>
	    <TextView
	        android:id="@+id/tvRouteDestination"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Seneca Commons"
	        android:gravity="right"
	        android:paddingTop="10dp"
	        android:paddingBottom="5dp"
	        android:paddingRight="10dp"
	        android:textSize="18dp"
	        android:textStyle="bold"/>
	    
	</LinearLayout>

	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="70dp"
	    android:orientation="vertical"
	    android:weightSum="6"
	    android:background="@drawable/list_item_end">
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_weight ="1"
			android:layout_height="0dp"
	        />
	    
	    <TextView
	        android:id="@+id/tvRouteNumber"
	        android:layout_width="match_parent"
			android:layout_weight ="2"
			android:layout_height="0dp"
			android:text="BUS#10"
	        android:textSize="18dp"
	        android:paddingBottom="5dp"
	        android:textStyle="bold"
	        android:textColor="#ffffff"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/tvTime"
	        android:layout_width="match_parent"
	        			android:layout_weight="2"
	        			android:layout_height="0dp"
			android:text="15mins"
	        android:textSize="21dp"
	        android:textStyle="bold"
	        android:textColor="#37c570"
	        android:gravity="center"/>
	    
	    
	    
	    </LinearLayout>
	
	    


</LinearLayout>